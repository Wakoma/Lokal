version: "3.8"
services:

  mariadb:
    image: docker.io/bitnami/mariadb:10.5
    container_name: moodledatabase
    environment:
      - ALLOW_EMPTY_PASSWORD=yes
      - MARIADB_USER=bn_moodle
      - MARIADB_DATABASE=bitnami_moodle
      - MARIADB_CHARACTER_SET=utf8mb4
      - MARIADB_COLLATE=utf8mb4_unicode_ci
    volumes:
      - 'mariadb_data:/bitnami/mariadb'
    networks:
      - moodledatabase

  moodle:
    image: docker.io/bitnami/moodle:3
    environment:
      - MOODLE_DATABASE_HOST=moodledatabase
      - MOODLE_DATABASE_PORT_NUMBER=3306
      - MOODLE_DATABASE_USER=bn_moodle
      - MOODLE_DATABASE_NAME=bitnami_moodle
      - ALLOW_EMPTY_PASSWORD=yes
    volumes:
      - 'moodle_data:/bitnami/moodle'
      - 'moodledata_data:/bitnami/moodledata'
    depends_on:
      - mariadb
    labels:
      traefik.enable: "true"
      traefik.http.routers.moodle.entrypoints: websecure
      traefik.http.routers.moodle.rule: Host(`${DOMAIN_MOODLE}`)
      traefik.http.routers.moodle.tls: "true"
{% if server_is_public %}
      traefik.http.routers.moodle.tls.certresolver: ${CERT_RESOLVER}
{% endif %}
      traefik.http.services.moodle.loadbalancer.server.port: 80
    networks:
      - moodledatabase
      - traefik

volumes:
  mariadb_data:
    driver: local
  moodle_data:
    driver: local
  moodledata_data:
    driver: local

networks:
  traefik:
    external: true
  moodledatabase:
    name: moodledatabase
