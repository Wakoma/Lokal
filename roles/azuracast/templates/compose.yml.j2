      MYSQL_PASSWORD: {{mysql_password_azuracast}}
      MYSQL_DATABASE: {{mysql_database_azuracast}}
      # env vars from sample.env
      AZURACAST_HTTP_PORT: 80
      AZURACAST_HTTPS_PORT: 443
      AZURACAST_SFTP_PORT: {{azuracast_sftp_port | default('2022') }}
      AZURACAST_PUID: {{uid}}
      AZURACAST_PGID: {{gid}}
      DOMAIN_AZURACAST: {{subdomain_azuracast}}.{{domain}}
      CERT_RESOLVER: {{cert_resolver}}
      NGINX_TIMEOUT: {{azuracast_nginx_timeout | default('1000') }}
      PHP_MEMORY_LIMIT: {{ memory_limit_azuracast }}
    labels:
      traefik.enable: "true"
      traefik.http.routers.azuracast.entrypoints: websecure
      traefik.http.routers.azuracast.rule: Host(`{{subdomain_azuracast}}.{{domain}}`)
      traefik.http.routers.azuracast.tls: "true"
{% if server_is_live %}
      traefik.http.routers.azuracast.tls.certresolver: {{cert_resolver}}
{% endif %}
      traefik.http.services.azuracast.loadbalancer.server.port: 80
    networks:
      - traefik

networks:
  traefik:
    external: true
