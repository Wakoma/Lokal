      MYSQL_SLOW_QUERY_LOG: 0
      MYSQL_MAX_CONNECTIONS: 100
      AUTO_ASSIGN_PORT_MIN: {{port_min_azuracast}}
      AUTO_ASSIGN_PORT_MAX: {{port_max_azuracast}}
